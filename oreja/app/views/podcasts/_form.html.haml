= form_for(podcast) do |f|
  - if podcast.errors.any?
    #error_explanation
      %h2
        = pluralize(podcast.errors.count, "error")
        prohibited this podcast from being saved:
      %ul
        - podcast.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :genre
    = f.text_field :genre
  .field
    = f.label :summary
    = f.text_area :summary
  .actions
    = f.submit
