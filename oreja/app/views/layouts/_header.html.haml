%body
  %header.navbar.navbar-fixed-top.navbar-inverse
    .container
      = link_to("Oreja", user_path(current_user), id: "Logo") if !current_user.nil?
      = link_to("Oreja", login_path, id: "Logo") if current_user.nil?

      %nav
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "Providers", providers_path
          %li= link_to "Podcasts", podcasts_path
          - if logged_in?
            %li= link_to "Users", '#'
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Account
                %b.caret
              %ul.dropdown-menu
                %li= link_to "Profile", current_user
                %li= link_to "Settings", '#'
                %li.divider
                %li
                  = link_to "Log out", logout_path, method: "delete"
          - else
            %li= link_to "Log in", login_path
