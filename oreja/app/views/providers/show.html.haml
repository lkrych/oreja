%p#notice= notice
%p
  %strong Name:
  = @provider.name
%p
  %strong Description:
  = @provider.description
%table
  %thead
    %tr
      %th Logo
      %th Name
      %th Genre
      %th Summary
      %th{:colspan => "3"}
  %tbody
    - @podcasts.each do |podcast|
      %tr
        %td= link_to(image_tag(podcast.image_url), podcast_path(:id => podcast.id, :name => podcast.name))
        %td= podcast.name
        %td= podcast.genre
        %td= podcast.summary
        -# %td= link_to 'Show', podcast
        %td= link_to 'Edit', edit_podcast_path(podcast)
        %td= link_to 'Destroy', podcast, method: :delete, data: { confirm: 'Are you sure?' }
= link_to 'Edit', edit_provider_path(@provider)
|
= link_to 'Back', providers_path