<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @provider.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @provider.description %>
</p>

<table>
  <thead>
    <tr>
      <th>Logo</th>
      <th>Name</th>
      <th>Genre</th>
      <th>Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @podcasts.each do |podcast| %>
      <tr>
        <td><%= link_to(image_tag(podcast.image_url), podcast_path(podcast)) %></td>
        <td><%= podcast.name %></td>
        <td><%= podcast.genre %></td>
        <td><%= podcast.summary %></td>
        <td><%= link_to 'Show', podcast %></td>
        <td><%= link_to 'Edit', edit_podcast_path(podcast) %></td>
        <td><%= link_to 'Destroy', podcast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_provider_path(@provider) %> |
<%= link_to 'Back', providers_path %>
